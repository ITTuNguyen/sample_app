<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.user.size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "micropost.span1" %><%= time_ago_in_words(micropost.created_at) %>
    <%= t "micropost.span2" %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("layout.user.del"), micropost, method: :delete,
                                      data: {confirm: t("layout.user.conf") } %>
    <% end %>
  </span>
</li>
